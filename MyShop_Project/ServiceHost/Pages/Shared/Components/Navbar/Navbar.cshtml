@using System.Globalization
@using AccountManagement.Domain.Account.Agg
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Localization
@using My_ShopQuery.Contract.SiteLogo
@model My_ShopQuery.Contract.Menu.MenuQueryModel
@inject IViewLocalizer Localizer
@inject ISiteLogoQueryModel LogoQueryModel
@inject UserManager<ApplicationUser> userManager


<!-- Start Navbar Area -->
<div class="navbar-area">
    <div class="trifles-responsive-nav">
        <div class="container">
            <div class="trifles-responsive-menu">
                <div class="logo">
                    <a href="index.html">
                        <img src="assets/img/logo-two.png" alt="logo">
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="trifles-nav">
        <div class="container">
            <nav class="navbar navbar-expand-md navbar-light">
                <a class="navbar-brand" href="index.html">
                    <img src="assets/img/logo-two.png" alt="logo">
                </a>

                <div class="collapse navbar-collapse mean-menu" id="navbarSupportedContent">
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a href="/" class="nav-link">
                                @Localizer["Home"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Products" class="nav-link">
                                @Localizer["Products"]
                                <i class="fa fa-chevron-down"></i>
                            </a>
                            <ul class="dropdown-menu">
                                @foreach (var item in  Model.ProductCategoryQueryModels)
                                {
                                    <li class="nav-item">
                                        <a href="/CategoryWithProduct/@item.Slug" class="nav-link active">
                                            @item.Name
                                        </a>
                                    </li>
                                }


                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="/About" class="nav-link">
                                About Holden Harvest
                                <i class="fa fa-chevron-down"></i>
                            </a>

                            <ul class="dropdown-menu">
                                <li class="nav-item">
                                    <a href="about.html" class="nav-link">
                                        @Localizer["Values"]
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="team.html" class="nav-link">
                                        @Localizer["Team"]
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="gallery.html" class="nav-link">
                                        @Localizer["Story"]
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="faq.html" class="nav-link">
                                        @Localizer["Vision"]
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a href="contact.html" class="nav-link">
                                @Localizer["Sustainability"]
                            </a>
                        </li>
                    </ul>

                    <div class="others-options">

                        @* <div class="cart-btn">
                            <a href="/AccountRegister/Login">
                                <i class="fa fa-sign-in"></i>
                            </a>
                        </div> *@
                        <div class="cart-btn dropdown" style="width: 60px;">
                            <button class="btn  dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-globe" style="color: #b7b7b7"></i>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                @if (Model != null)
                                {
                                    foreach (var item in Model.LanguageQueries)
                                    {
                                        <li>
                                            <a class="dropdown-item" href="/Index?handler=ChangLanguage&id=@item.Language">
                                                @item.LanguageNameShowName
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>


                        <div class="option-item">
                            <i class="search-btn fa fa-search"></i>
                            <i class="close-btn fa fa-times"></i>
                            <div class="search-overlay search-popup">
                                <div class='search-box'>
                                    <form class="search-form">
                                        <input class="search-input" name="search" placeholder="Search" type="text">

                                        <button class="search-button" type="submit">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="cart-btn">
                            <a href="/AccountRegister/Login">
                                <i class="fa fa-sign-in"></i>
                            </a>
                        </div>

                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>
<!-- End Navbar Area -->